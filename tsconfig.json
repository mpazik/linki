{
  "compilerOptions": {
    "lib": [
      "es2019",
      "dom"
    ],
    "declaration": true,
    "target": "ES2018",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
